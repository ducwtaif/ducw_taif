import requests

def get_github_repos(username):
    """Láº¥y danh sÃ¡ch repository tá»« GitHub API."""
    url = f"https://api.github.com/users/{username}/repos"
    response = requests.get(url)

    if response.status_code == 200:
        repos = response.json()
        return [repo["name"] for repo in repos]
    else:
        print(f"Lá»—i: KhÃ´ng thá»ƒ láº¥y dá»¯ liá»‡u (MÃ£ lá»—i: {response.status_code})")
        return None

def main():
    """ChÆ°Æ¡ng trÃ¬nh chÃ­nh."""
    print("ğŸ”¹ ChÃ o má»«ng Ä‘áº¿n vá»›i trÃ¬nh tÃ¬m kiáº¿m repository GitHub! ğŸ”¹")
    username = input("Nháº­p tÃªn ngÆ°á»i dÃ¹ng GitHub: ")

    repos = get_github_repos(username)
    if repos:
        print(f"\nğŸ“Œ Danh sÃ¡ch repository cá»§a {username}:")
        for idx, repo in enumerate(repos, start=1):
            print(f"{idx}. {repo}")
    else:
        print("âš  KhÃ´ng tÃ¬m tháº¥y repository nÃ o.")

if __name__ == "__main__":
    main()
